<?xml version="1.0" encoding="UTF-16"?>
<!--
  Task Scheduler XML 定义
  任务名称: GPU_sklearn_bridge
  触发时机: 用户 nicho 登录时
  操作: 运行 start_bridge.ps1 启动 WSL2 cuML 服务
-->
<Task version="1.4" xmlns="http://schemas.microsoft.com/windows/2004/02/mit/task">
  <RegistrationInfo>
    <Date>2026-02-26T00:00:00</Date>
    <Author>nicho</Author>
    <Description>登录时自动启动 WSL2 中的 GPU sklearn bridge (cuML rpyc 服务)</Description>
    <URI>\GPU_sklearn_bridge</URI>
  </RegistrationInfo>

  <Triggers>
    <LogonTrigger>
      <Enabled>true</Enabled>
      <UserId>nicho</UserId>
      <!-- 登录后延迟 15 秒，等待网络和 WSL2 初始化 -->
      <Delay>PT15S</Delay>
    </LogonTrigger>
  </Triggers>

  <Principals>
    <Principal id="Author">
      <UserId>nicho</UserId>
      <LogonType>InteractiveToken</LogonType>
      <RunLevel>LeastPrivilege</RunLevel>
    </Principal>
  </Principals>

  <Settings>
    <MultipleInstancesPolicy>IgnoreNew</MultipleInstancesPolicy>
    <DisallowStartIfOnBatteries>false</DisallowStartIfOnBatteries>
    <StopIfGoingOnBatteries>false</StopIfGoingOnBatteries>
    <AllowHardTerminate>true</AllowHardTerminate>
    <StartWhenAvailable>true</StartWhenAvailable>
    <RunOnlyIfNetworkAvailable>false</RunOnlyIfNetworkAvailable>
    <IdleSettings>
      <StopOnIdleEnd>false</StopOnIdleEnd>
      <RestartOnIdle>false</RestartOnIdle>
    </IdleSettings>
    <AllowStartOnDemand>true</AllowStartOnDemand>
    <Enabled>true</Enabled>
    <Hidden>true</Hidden>
    <WakeToRun>false</WakeToRun>
    <ExecutionTimeLimit>PT0S</ExecutionTimeLimit>
    <Priority>7</Priority>
  </Settings>

  <Actions Context="Author">
    <Exec>
      <Command>powershell.exe</Command>
      <Arguments>-NonInteractive -WindowStyle Hidden -ExecutionPolicy Bypass -File "C:\Users\nicho\gpu-sklearn-bridge\scripts\start_bridge.ps1"</Arguments>
      <WorkingDirectory>C:\Users\nicho\gpu-sklearn-bridge</WorkingDirectory>
    </Exec>
  </Actions>
</Task>
